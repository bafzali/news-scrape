<main>
  <div class="container">
    {{#each dbArticle}}
    <div class="row">
      <div class="col s12 m12">
        <div class="card brown lighten-5">
          <div class="card-content black-text">
            <span class="card-title"><a class="black-text" href="{{link}}" target="_blank">{{title}}</a></span>
            <p>{{summary}}</p>
            <br>
            <a class="btn-floating blue darken-1 modal-trigger add-comment" data-id={{_id}} href="#modal1">
              <i class="material-icons">format_quote</i>
            </a>
            {{#if saved}}
            <a class="btn-floating red unsave-article" data-id={{_id}}>
              <i class="material-icons" data-id={{_id}}>favorite</i>
            </a>
            {{/if}}
            {{#unless saved}}
            <a class="btn-floating green save-article" data-id={{_id}}>
              <i class="material-icons" data-id={{_id}}>favorite</i>
            </a>
            {{/unless}}
          </div>
          <div class="card-action">
            {{#if comment}}
            <ul class="collapsible">
              <li>
                <div class="collapsible-header brown lighten-5"><i class="material-icons">format_quote</i>Comments</div>
                {{#each comment}}
                <div class="collapsible-body"><span>{{text}}</span></div>
                {{/each}}
              </li>
            </ul>
            {{/if}}
            
          </div>
        </div>
      </div>
    </div>
    {{/each}}

  </div>
</main>